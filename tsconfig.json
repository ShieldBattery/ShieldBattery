{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitOverride": true,
    "strict": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noEmit": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },

  "include": [
    "app/**/*",
    "client/**/*",
    "common/**/*",
    "email/**/*",
    "integration/**/*",
    "server/**/*",
    "typings/**/*",
    "*.ts"
  ],

  "exclude": ["server/public", "server/testing/google", "app/dist", "app/node_modules"]
}
