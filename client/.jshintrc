{
    "maxerr": 50,

    // Enforcing
    "newcap": true,
    "noarg": true,
    "nonew": true,
    "quotmark": "single",
    "undef": true,
    "unused": "vars",
    "trailing": true,
    "maxlen": 100,

    // Relaxing
    "asi": true,
    "funcscope": true,
    "laxbreak": true,
    "laxcomma": true,

    // Environments
    "browser": true,
    "node": true,

    // Custom Globals
    "predef": [ "angular"
              , "io"
              ]
}
