@require 'reset.styl'
@require 'colors.styl'
@require 'typography.styl'

*
  box-sizing border-box

html
  font-family Roboto, sans-serif
  font-weight normal
  color $colorTextPrimary
  font-size unit(100 * ($textSizeBody / 16), '%')
  line-height 1.5
  background-color $colorBackground

html
body
#app
#app > div
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust 100%
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-touch-callout none
  height 100%
  margin 0
  padding 0
  position relative


@require 'font-icons.styl'

[disabled]
  color $colorTextFaint

.material-icons
  display inline-block
  vertical-align middle

// TODO(tec27): Move to a system of attributes more like Angular Material
.flex-row
  display flex
  flex-direction row

.flex-col
  display flex
  flex-direction column

.flex-wrap
  flex-wrap wrap

.flex-justify-start
  justify-content flex-start

.flex-justify-center
  justify-content center

.flex-justify-end
  justify-content flex-end

.flex-fit
  flex-grow 1

flexNumStyles(num, percent = num)
  .flex-{num}
    flex 0 0 unit(percent, '%')
  .flex-row > .flex-{num}
    max-width unit(percent, '%')
  .flex-col > .flex-{num}
    max-height unit(percent, '%')

for i in (1..20)
  flexNumStyles(i*5)

flexNumStyles(33, 33.33%)
flexNumStyles(66, 66.66%)

@require 'material-components/*'

#app > .login-wrapper
  width 640px + (16px * 2)
  margin 0 auto

  & > .logo
    display block
    margin 0 auto
    width 256px
    height 256px

  .logotext
    display block
    margin 0 auto 8px
    text-align center

    h1
      display inline-block
      margin-top 0

.login-wrapper .card form > h3
  margin-top 0

.errors
  color $colorError