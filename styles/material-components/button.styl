@require 'curves.styl'
@require '../typography.styl'

button
.material-button
  user-select none
  padding 0
  position relative
  outline 0
  border none
  display inline-table
  padding 0 6px
  margin 6px 8px
  line-height 36px
  min-height 36px
  background 0 0
  white-space nowrap
  text-align center
  text-transform uppercase
  font-style inherit
  font-variant inherit
  font-family inherit
  relativeFontSize($textSizeButton)
  font-weight 500
  letter-spacing 0.020em
  text-decoration none
  cursor pointer
  overflow hidden
  background-color transparent
  transition box-shadow .4s $fastOutSlowIn, background-color .4s $fastOutSlowIn

  &:not([disabled]):hover
    background-color rgba(255, 255, 255, 0.08)

.card button:not([disabled])
  &:hover
  &.focused
    background-color rgba(255, 255, 255, 0.05)

.material-button
  margin 6px 4px
  padding 0 8px
  user-select none
  border-radius 2px

  .material-button-label
    color $colorTextPrimary

  &[disabled]
    .material-button-label
      color $colorTextFaint

.flat-button.primary:not([disabled])
  .material-button-label
    color $blue400

.flat-button.accent:not([disabled])
  .material-button-label
    color $amberA400
